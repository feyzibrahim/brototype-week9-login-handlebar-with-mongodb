<div
  class="container-fluid bg-gray-100 d-flex align-items-center justify-content-center min-vh-100"
>
  <div class="container-md bg-white shadow-lg rounded p-5 mx-5 mx-lg-0">
    <h2 class="text-center font-weight-bold mb-4">Sign Up</h2>
    <form method="post" action="/signup">
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" id="name" type="text" required />
      </div>
      <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" id="email" type="email" required />
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" id="password" type="password" required />
      </div>
      <div class="mb-3">
        <label class="form-label" for="passwordA">Confirm Password</label>
        <input class="form-control" id="passwordA" type="password" required />
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <button class="btn btn-primary" type="submit">
          Sign Up
        </button>
        <a class="text-decoration-none" href="/auth/login">Already a member?</a>
      </div>
    </form>
  </div>
</div>