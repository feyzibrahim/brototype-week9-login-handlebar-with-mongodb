<div class="container mx-auto pt-5 pb-5">
  <div class="text-center">
    <h1 class="display-4 font-weight-bold text-gray-800 mb-4">
      Welcome to Bloggger!
    </h1>
    <p class="lead text-gray-600 mb-4">
      Start sharing your thoughts and ideas with the world.
    </p>
    <a href="/blog/create-post" class="btn btn-primary">
      Create New Post
    </a>
  </div>

  <div class="mt-5">
    <h2 class="text-2xl font-weight-bold text-gray-800 mb-4">Recent Posts</h2>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-3 py-3 row-gap-4">
      <!-- Blog posts -->

      {{#each blogData}}
        <div class="col">
          <div class="bg-white rounded-lg shadow p-4">
            <h3 class="h4 font-weight-bold mb-2">{{this.title}}</h3>
            <p class="text-muted">{{this.snippet}}</p>
            <a
              href="/blog-post-{{@index}}"
              class="text-primary text-decoration-none mt-2 d-block"
            >
              Read More
            </a>
          </div>
        </div>
      {{/each}}

    </div>
  </div>
</div>