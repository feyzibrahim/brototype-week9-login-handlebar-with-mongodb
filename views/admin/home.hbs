<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Admin Dashboard</h1>
    <div>
      <a href="/admin/newUser" class="btn btn-primary"> Create New User</a>
    </div>
  </div>

  <!-- Search Form -->
  <form action="/admin/search" method="GET" class="my-4">
    <div class="input-group">
      <input
        type="text"
        class="form-control"
        name="search"
        placeholder="Search Users"
      />
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>

  <!-- User Count -->
  <div class="mb-4">
    <h3>Total Users: {{count}}</h3>
  </div>

  <!-- Users Table -->
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>
            <a
              href="/admin/edit/{{this._id}}"
              class="btn btn-primary btn-sm"
            >Edit</a>
            <a
              href="/admin/delete/{{this._id}}"
              class="btn btn-danger btn-sm"
            >Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>